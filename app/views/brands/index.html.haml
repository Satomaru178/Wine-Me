.container
  .header
    .header__contents.flex
      .header__contents__left
        .header__contents__left__logo
          = link_to "/"  do
            = image_tag 'logo/Wine-Me-icon.png', width: "130px"
      .header__contents__right
        .header__contents__right__upper
          %h2.header__contents__right__upper__copy
            あなたのお気に入りのワイン、教えてください
          .header__contents__right__upper__search
            = form_with url: "#", local: true, method: :get, class: "search-form" do |f|
              = f.text_field :keyword, placeholder: "キーワードで検索", class: "search-input"
              = button_tag type: "submit", class: "search-btn" do
                = icon('fas', 'search')
        .header__contents__right__lower
          %ul.header__contents__right__lower__lists
            %li.header__contents__right__lower__lists__type
              = link_to "#" do
                種類
            %li.header__contents__right__lower__lists__variety
              = link_to "#" do
                品種
            %li.header__contents__right__lower__lists__origin
              = link_to "#" do
                産地
            %li.header__contents__right__lower__lists__scene
              = link_to "#" do
                シーン
            %li.header__contents__right__lower__lists__taste
              = link_to "#" do
                味わい
            %li.header__contents__right__lower__lists__detail-search
              = link_to "#" do
                詳細検索
            %li.header__contents__right__lower__lists__login
              = link_to "#" do
                ログイン
.content
  .side__bar
  .content__main
